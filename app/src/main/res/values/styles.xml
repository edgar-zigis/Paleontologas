<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- CircularProgressBar -->

    <style name="Widget" />

    <style name="Widget.ProgressBar.CircularProgressBar" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="progressColor">@color/white</item>
        <item name="hasShadow">true</item>
        <item name="strokeSize">20</item>
        <item name="titleColor">@color/white</item>
        <item name="subtitleColor">@color/white</item>
    </style>

    <style name="Widget.ProgressBar.Holo.CircularProgressBar" parent="Widget.ProgressBar.CircularProgressBar">
        <item name="hasShadow">false</item>
        <item name="strokeSize">5</item>
    </style>

    <!-- Others -->

    <style name="PeriodHeadingStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/gentona_book</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryMid</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PeriodDescriptionStyle">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/gentona_book</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="QuizButtonStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/gentona_book</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
